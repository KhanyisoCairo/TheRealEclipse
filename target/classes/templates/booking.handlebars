    <center>
        <div class="col-12" style="arial">
            <h1>Traffic Department Online Booking</h1>
        </div>
    </center>

    <div class="row">

        <div class="col-sm">
            <h2>Make Booking</h2>
        </div>
    </div>
    <div class="col-6">
        <h4> Licence Type</h4>

        <form action="/booking" method="post">

            <div class="form-group mb-2">
                <input class="form-check-input" type="radio" name="licenceType" id="Radios2" value="learners"> Learners
                Licence
            </div>
            <div class="form-group mb-2">
                <input class="form-check-input" type="radio" name="licenceType" id="Radios2" value="drivers"> Drivers
                Licence
            </div>


            <div class="form-group dropdown">

                <select class="form-control" name="location">
                    <option value=""> Choose Traffic Department</option>
                    <option value="greenpoint">Greenpoint Traffic Department</option>
                    <option value="athlone">Athlone Traffic Department</option>
                    <option value="belville">Belville Traffic Department</option>
                    <option value="stockroad">Stock Road Traffic Department</option>
                    <option value="elsies">Elsies River Department</option>
                    <option value="goodwood">Goodwood Department</option>
                </select>
            </div>

            <div class="form-group">
                <select class="form-control" name="code">
                    <option value="">Choose Code</option>
                    <option value="c1" name="code">Code 1 - motorcycles</option>
                    <option value="c2" name="code">Code 2 - Light motor vehicle</option>
                    <option value="c8" name="code">Code 8 - Heavy motor vehicle</option>
                </select>
            </div>

            <div>

            </div>

            <div class="btn-group">
                <button type="submit" class="btn btn-secondary" value="Book">Check Date</button>
            </div>
        </form>


        <div>



            {{#if bookings }}

                <h3>Slots available</h3>

                <table class="table">
                    <tr>
                        <th>Type</th>
                        <th>Department</th>
                        <th>Slot</th>
                        <th></th>
                    </tr>
                    {{#each bookings }}
                        <tr>
                            <td>{{licenseType}}</td>
                            <td>{{department}}</td>
                            <td>{{slot}}</td>
                            <td>
                                <form action="/book" method="post">
                                    <input type="hidden" name="bookingId" value="{{id}}">
                                    <input type="submit" value="Book" class="btn btn-sm btn-info">
                                </form>
                            </td>
                        </tr>
                    {{else}}
                        {{#if canShow}}
                            <tr>
                                <td colspan="4">
                                    No slots available
                                </td>
                            </tr>

                        {{/if}}
                    {{/each}}
                </table>
            {{else}}

            {{/if}}



        </div>


    </div>
</div>

